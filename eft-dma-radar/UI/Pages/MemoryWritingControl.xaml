<UserControl x:Class="eft_dma_radar.UI.Pages.MemoryWritingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:controls="clr-namespace:eft_dma_shared.Common.UI.Controls;assembly=eft-dma-shared"
             mc:Ignorable="d" 
             d:DesignHeight="1600" d:DesignWidth="350"
             MinWidth="200" MinHeight="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header - Draggable area -->
        <Border x:Name="DragHandle" Grid.Row="0" Style="{StaticResource PanelHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Memory Writing" Style="{StaticResource PanelHeaderText}"/>

                <!-- Close button -->
                <Border Grid.Column="1" Style="{StaticResource CloseButtonBorder}">
                    <Button x:Name="btnCloseHeader" Style="{StaticResource CloseButton}"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Border Background="{DynamicResource RegionBrush}" 
                    CornerRadius="0,0,8,8"/>

            <ScrollViewer Style="{StaticResource PanelScrollViewer}" Margin="5,10,5,21">
                <hc:SimpleStackPanel>
                    <!-- Global Settings Section -->
                    <Expander x:Name="expGlobalSettings" Header="Global Settings" Style="{StaticResource PanelExpander}" IsExpanded="True">
                        <hc:SimpleStackPanel Style="{StaticResource ExpanderContent}" Margin="2,8,2,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkMasterSwitch" Content="Master Switch" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                          Margin="0,0,0,8" Tag="MemWritesEnabled"/>

                                <CheckBox x:Name="chkAdvancedWrites" Content="Advanced Writes" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Row="1" Grid.Column="0" 
                                          Margin="0,0,5,8" VerticalAlignment="Bottom" Tag="AdvancedMemWrites"/>

                                <CheckBox x:Name="chkAntiPage" Content="Anti-Page" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Row="1" Grid.Column="1" 
                                          Margin="5,0,0,8" Tag="AntiPage"/>

                                <CheckBox x:Name="chkRageMode" Content="Rage Mode" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Row="3" Grid.Column="0" 
                                          Margin="0,0,0,8" VerticalAlignment="Bottom" Tag="RageMode"/>

                                <Button x:Name="btnAntiAFK" Content="Anti AFK" 
                                        Grid.Row="4" Grid.Column="0"
                                        Style="{StaticResource ButtonPrimary}"/>

                                <Button x:Name="btnGymHack" Content="Gym Hack"
                                        Grid.Row="4" Grid.Column="1"
                                        Style="{StaticResource ButtonPrimary}"/>
                            </Grid>
                        </hc:SimpleStackPanel>
                    </Expander>

                    <!-- Aimbot Settings Section -->
                    <Expander x:Name="expAimbotSettings" Header="Aimbot Settings" Style="{StaticResource PanelExpander}" IsExpanded="True">
                        <hc:SimpleStackPanel Style="{StaticResource ExpanderContent}" Margin="2,8,2,0">
                            <CheckBox x:Name="chkEnableAimbot" Content="Enable" 
                                      Style="{StaticResource DynamicCheckBoxStyle}" 
                                      Margin="0,0,0,8" Tag="EnableAimbot"/>

                            <!-- FOV/CQB Radio Buttons -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Mode" Style="{StaticResource LabelText}" 
                                           VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>

                                <hc:SimpleStackPanel Grid.Column="1" Orientation="Horizontal">
                                    <RadioButton x:Name="rdbFOV"
                                                 Content="FOV"
                                                 Tag="FOV"
                                                 GroupName="AimbotMode"
                                                 Margin="0,0,20,0"/>

                                    <RadioButton x:Name="rdbCQB"
                                                 Content="CQB"
                                                 Tag="CQB"
                                                 GroupName="AimbotMode"/>
                                </hc:SimpleStackPanel>
                            </Grid>

                            <!-- Target Bone Selection -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Target Bone" Style="{StaticResource LabelText}" 
                                           VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>

                                <hc:ComboBox x:Name="cboTargetBone" Grid.Column="1">
                                    <ComboBoxItem Content="Head" IsSelected="True"/>
                                    <ComboBoxItem Content="Neck"/>
                                    <ComboBoxItem Content="Thorax"/>
                                    <ComboBoxItem Content="Stomach"/>
                                    <ComboBoxItem Content="Legs"/>
                                </hc:ComboBox>
                            </Grid>

                            <!-- FOV Slider -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="FOV" Style="{StaticResource LabelText}" 
                                           VerticalAlignment="Center" Grid.Column="0"/>
                                <controls:TextValueSlider
                                   x:Name="sldrAimbotFOV"
                                   Minimum="10" Maximum="360"
                                   MaxContent="Max"
                                   SmallChange="1" TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ContentStringFormat="{}{0:0°}" 
                                   Grid.Column="1" Tag="AimbotFOV"/>
                            </Grid>

                            <!-- Distance Slider -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Max Distance" Style="{StaticResource LabelText}" 
                                           VerticalAlignment="Center" Grid.Column="0"/>
                                <controls:TextValueSlider
                                    x:Name="sldrAimbotDistance"
                                    Minimum="1" Maximum="1500"
                                    MaxContent="Max"
                                    SmallChange="1" TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    ContentStringFormat="{}{0:0m}" 
                                    Grid.Column="1" Tag="AimbotDistance"/>
                            </Grid>

                            <!-- Aimbot Options -->
                            <hc:CheckComboBox x:Name="ccbAimbotOptions" Grid.Column="1" Margin="0,0,0,0"
                                                  Style="{StaticResource CheckComboBoxExtend}"
                                                  hc:InfoElement.Title="Options"
                                                  hc:InfoElement.TitlePlacement="Top"
                                                  hc:InfoElement.Placeholder="Safe Lock, Auto Bone..."/>

                            <!-- Bone RNG % -->
                            <Border x:Name="pnlBoneRNG" Margin="0,8,0,8"
                                    BorderBrush="#40808080" BorderThickness="1" 
                                    Background="#10000000" CornerRadius="4"
                                    Padding="5"
                                    Visibility="Collapsed">
                                <Grid Margin="5,3,5,3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Head -->
                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Head %" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <controls:TextValueSlider
                                            x:Name="sldrAimbotRNGHead"
                                            Minimum="0" Maximum="100"
                                            SmallChange="1" TickFrequency="1"
                                            IsSnapToTickEnabled="True"
                                            ContentStringFormat="{}{0:0\%}"
                                            Grid.Column="1" Tag="RNGHead"/>
                                    </Grid>

                                    <!-- Torso -->
                                    <Grid Grid.Row="1" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Torso %" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <controls:TextValueSlider
                                             x:Name="sldrAimbotRNGTorso"
                                             Minimum="0" Maximum="100"
                                             SmallChange="1" TickFrequency="1"
                                             IsSnapToTickEnabled="True"
                                             ContentStringFormat="{}{0:0\%}"
                                             Grid.Column="1" Tag="RNGTorso"/>
                                    </Grid>

                                    <!-- Arms -->
                                    <Grid Grid.Row="2" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Arms %" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <controls:TextValueSlider
                                             x:Name="sldrAimbotRNGArms"
                                             Minimum="0" Maximum="100"
                                             SmallChange="1" TickFrequency="1"
                                             IsSnapToTickEnabled="True"
                                             ContentStringFormat="{}{0:0\%}"
                                             Grid.Column="1" Tag="RNGArms"/>
                                    </Grid>

                                    <!-- Legs -->
                                    <Grid Grid.Row="3" Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Legs %" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>
                                        <controls:TextValueSlider
                                             x:Name="sldrAimbotRNGLegs"
                                             Minimum="0" Maximum="100"
                                             SmallChange="1" TickFrequency="1"
                                             IsSnapToTickEnabled="True"
                                             ContentStringFormat="{}{0:0\%}"
                                             Grid.Column="1" Tag="RNGLegs"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </hc:SimpleStackPanel>
                    </Expander>

                    <!-- Weapons Section -->
                    <Expander x:Name="expWeapons" Header="Weapons" Style="{StaticResource PanelExpander}" IsExpanded="True">
                        <Grid Margin="2,0,2,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,10,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkNoWeaponMalfunctions" Content="No Malfunctions" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" Grid.Column="0" Grid.Row="0"
                                          Margin="0,0,5,8" Tag="NoWeaponMalfunctions"/>

                                <CheckBox x:Name="chkMagDrills" Content="Mag Drills" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" Grid.Column="1" Grid.Row="0"
                                          Margin="5,0,0,8" Tag="MagDrills"/>

                                <CheckBox x:Name="chkFastWeaponOps" Content="Fast Weapon Ops" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" Grid.Column="0" Grid.Row="1"
                                          Margin="0,0,5,8" Tag="FastWeaponOps"/>

                                <CheckBox x:Name="chkDisableWeaponCollision" Content="Disable Wepon Collision" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" Grid.Column="1" Grid.Row="1"
                                          Margin="5,0,0,8" Tag="DisableWeaponCollision"/>

                                <CheckBox x:Name="chkRemoveableAttachments" Content="Remove Attachments" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" Grid.Column="0" Grid.Row="2"
                                          Margin="0,0,5,0" Tag="RemoveableAttachments"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkNoRecoil" Content="No Recoil" 
                                              Style="{StaticResource DynamicCheckBoxStyle}" 
                                              Grid.Column="0" Tag="NoRecoil"
                                              VerticalAlignment="Center"/>

                                    <Button x:Name="btnNoRecoilConfig" Tag="NoRecoilPanel"
                                            Style="{StaticResource ButtonIcon}"
                                            ToolTip="Configure No Recoil"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28" Height="28"
                                            Padding="6" Grid.Column="1"
                                            hc:IconElement.Width="16"
                                            hc:IconElement.Geometry="{StaticResource GearGeometry}"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="pnlNoRecoil" Margin="0,0,0,8"
                                        BorderBrush="#40808080" BorderThickness="1" 
                                        Background="#10000000" CornerRadius="4"
                                        Padding="5"
                                        Visibility="Collapsed">
                                    <Grid Margin="5,3,5,3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="45"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Recoil" VerticalAlignment="Center" Style="{StaticResource LabelText}" Grid.Column="0"/>
                                            <controls:TextValueSlider
                                                x:Name="sldrNoRecoilAmt"
                                                Minimum="0" Maximum="100"
                                                SmallChange="1" TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                ContentStringFormat="{}{0:0\%}"
                                                Grid.Column="1" Tag="NoRecoilAmount"/>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="45"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Sway" VerticalAlignment="Center" Style="{StaticResource LabelText}" Grid.Column="0"/>
                                            <controls:TextValueSlider
                                                x:Name="sldrNoSwayAmt"
                                                Minimum="0" Maximum="100"
                                                SmallChange="1" TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                ContentStringFormat="{}{0:0\%}"
                                                Grid.Column="1" Tag="NoSwayAmount"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Expander>

                    <!-- Movement Section -->
                    <Expander x:Name="expMovement" Header="Movement" Style="{StaticResource PanelExpander}" IsExpanded="True">
                        <Grid Margin="2,0,2,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,10,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkInfiniteStamina" Content="Infinite Stamina" 
                                          Style="{StaticResource DynamicCheckBoxStyle}"
                                          Grid.Row="0" Grid.Column="0" 
                                          Margin="0,0,5,8" Tag="InfiniteStamina"/>

                                <CheckBox x:Name="chkFastDuck" Content="Fast Duck" 
                                          Style="{StaticResource DynamicCheckBoxStyle}"
                                          Grid.Row="0" Grid.Column="1"
                                          Margin="5,0,0,8" Tag="FastDuck"/>

                                <CheckBox x:Name="chkMuleMode" Content="M.U.L.E Mode" 
                                          Style="{StaticResource DynamicCheckBoxStyle}"
                                          Grid.Row="1" Grid.Column="1"
                                          Margin="5,0,0,0" Tag="MuleMode"/>

                                <CheckBox x:Name="chkNoInertia" Content="No Inertia" 
                                          Style="{StaticResource DynamicCheckBoxStyle}"
                                          Grid.Row="1" Grid.Column="0" 
                                          Margin="0,0,5,0" Tag="NoInertia"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkWideLean" Content="Wide Lean" 
                                              Style="{StaticResource DynamicCheckBoxStyle}" 
                                              Grid.Column="0" Tag="WideLean"
                                              VerticalAlignment="Center"/>

                                    <Button x:Name="btnWideLeanConfig" Tag="WideLeanPanel"
                                            Style="{StaticResource ButtonIcon}"
                                            ToolTip="Configure Wide Lean"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28" Height="28"
                                            Padding="6" Grid.Column="1"
                                            hc:IconElement.Width="16"
                                            hc:IconElement.Geometry="{StaticResource GearGeometry}"/>
                                </Grid>

                                <Grid Grid.Column="1" Margin="5,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkLongJump" Content="Long Jump" 
                                              Style="{StaticResource DynamicCheckBoxStyle}" 
                                              Grid.Column="0" Tag="LongJump"
                                              VerticalAlignment="Center"/>

                                    <Button x:Name="btnLongJumpConfig" Tag="LongJumpPanel"
                                            Style="{StaticResource ButtonIcon}"
                                            ToolTip="Configure Long Jump"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28" Height="28"
                                            Padding="6" Grid.Column="1"
                                            hc:IconElement.Width="16"
                                            hc:IconElement.Geometry="{StaticResource GearGeometry}"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="pnlWideLean" Grid.Column="0" Margin="0,0,5,8"
                                        BorderBrush="#40808080" BorderThickness="1" 
                                        Background="#10000000" CornerRadius="4"
                                        Padding="5"
                                        Visibility="Collapsed">
                                    <Grid Margin="5,3,5,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Amt" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>

                                        <controls:TextValueSlider
                                            x:Name="sldrLeanAmt"
                                            Minimum="0.1"  Maximum="3"
                                            MaxContent="Max"
                                            SmallChange="0.1" 
                                            TickFrequency="0.1"
                                            IsSnapToTickEnabled="True"
                                            ContentStringFormat="{}{0:0.0m}" 
                                            Grid.Column="1" Tag="LeanAmt"/>
                                    </Grid>
                                </Border>

                                <Border x:Name="pnlLongJump" Grid.Column="1" Margin="5,0,0,8"
                                        BorderBrush="#40808080" BorderThickness="1" 
                                        Background="#10000000" CornerRadius="4"
                                        Padding="5"
                                        Visibility="Collapsed">
                                    <Grid Margin="5,3,5,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Mult" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>

                                        <controls:TextValueSlider
                                            x:Name="sldrLongJumpMultiplier"
                                            Minimum="1" Maximum="50"
                                            MinContent="Off" MaxContent="Max"
                                            SmallChange="1" TickFrequency="1"
                                            IsSnapToTickEnabled="True"
                                            ContentStringFormat="{}{0:0.0x}" 
                                            Grid.Column="1" Tag="JumpMultiplier"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="3" Margin="0,-4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkMoveSpeed" Content="Move Speed" 
                                              Style="{StaticResource DynamicCheckBoxStyle}" 
                                              Grid.Column="0" Tag="MoveSpeed"
                                              VerticalAlignment="Center"/>

                                    <Button x:Name="btnMoveSpeedConfig" Tag="MoveSpeedPanel"
                                            Style="{StaticResource ButtonIcon}"
                                            ToolTip="Configure Move Speed"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28" Height="28"
                                            Padding="6" Grid.Column="1"
                                            hc:IconElement.Width="16"
                                            hc:IconElement.Geometry="{StaticResource GearGeometry}"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <CheckBox x:Name="chkNoFall" Content="No Fall" 
                                              Style="{StaticResource DynamicCheckBoxStyle}" 
                                              Grid.Column="0" Tag="NoFall"
                                              VerticalAlignment="Stretch" Margin="5,6,28,6"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="4" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="pnlMoveSpeed" Grid.Column="0" Margin="0,0,5,8"
                                        BorderBrush="#40808080" BorderThickness="1" 
                                        Background="#10000000" CornerRadius="4"
                                        Padding="5"
                                        Visibility="Collapsed">
                                    <Grid Margin="5,3,5,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Multiplier" Style="{StaticResource LabelText}" 
                                                   VerticalAlignment="Center" Grid.Column="0"/>

                                        <controls:TextValueSlider
                                            x:Name="sldrMoveSpeedMultiplier"
                                            Minimum="1" Maximum="1.8"
                                            MinContent="Off" MaxContent="Sonic"
                                            SmallChange="0.1" TickFrequency="0.1"
                                            IsSnapToTickEnabled="True"
                                            ContentStringFormat="{}{0:0.0x}" 
                                            Grid.Column="1" Tag="MoveSpeedMultiplier"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Expander>

                    <!-- World Section -->
                    <Expander x:Name="expWorld" Header="World" Style="{StaticResource PanelExpander}" IsExpanded="True">
                        <Grid Margin="2,0,2,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,10,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkDisableShadows" Content="Disable Shadows" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Column="0" Grid.Row="0" Margin="0,0,5,8" Tag="DisableShadows"/>

                                <CheckBox x:Name="chkDisableGrass" Content="Disable Grass" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Column="1" Grid.Row="0" Margin="5,0,0,8" Tag="DisableGrass"/>

                                <CheckBox x:Name="chkClearWeather" Content="Clear Weather" 
                                          Style="{StaticResource DynamicCheckBoxStyle}" 
                                          Grid.Column="0" Grid.Row="1" Margin="0,0,5,0" Tag="ClearWeather"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="0,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

